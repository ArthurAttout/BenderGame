<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.henallux.masi.bendergame.GameRemainderMode">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabIndicatorHeight="5dp">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemCurrentRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tab_current_rules" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItemDiceChecker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tab_dice_checker" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/tabLayout"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>
