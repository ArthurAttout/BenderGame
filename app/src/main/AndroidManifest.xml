<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.henallux.masi.bendergame">

    <application
        android:allowBackup="true"
        android:name=".BenderGameApplication"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/DefaultBackgroundTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateGameActivity"
            android:theme="@style/DefaultBackgroundTheme" />
        <activity
            android:name=".GameRemainderMode"
            android:label="@string/title_activity_game_remainder_mode"
            android:theme="@style/DefaultBackgroundTheme" />
        <activity
            android:name=".GameNoRealDiceMode"
            android:label="@string/title_activity_game_no_real_dice_mode"
            android:theme="@style/DefaultBackgroundTheme" />
        <activity
            android:name=".CreateRuleActivity"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>